<div class="inv-mgmt">
  <h1><%= title %></h1>

  <% if (notice) { %>
    <div class="flash-message"><%= notice %></div>
  <% } %>

  <section class="inv-mgmt__actions">
    <h2>Actions</h2>
    <div class="action-cards">
      <a href="/inv/add-classification" class="action-card">
        <h3>Add New Classification</h3>
        <p>Create a new vehicle category (e.g., SUV, Truck).</p>
      </a>
      <a href="/inv/add-inventory" class="action-card">
        <h3>Add New Inventory</h3>
        <p>Register a new vehicle to the inventory system.</p>
      </a>
    </div>
  </section>


  <section class="inv-mgmt__manage">
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to see vehicles:</p>

    <%- classificationList %>

    <table id="inventoryDisplay"></table>

    <noscript>JavaScript must be enabled to use this page.</noscript>
  </section>
</div>

<!-- Hook up the JS file -->
<script src="/js/inventory.js"></script>
