<div>
  <h1><%= title %></h1>

  <% if (success) { %>
    <div class="alert alert-success">
      <%= success %>
    </div>
  <% } %>

  <% if (error) { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>

  <% if (accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <!-- Update account link (always visible for logged-in user) -->
    <p>
      <a href="/account/update/<%= accountData.account_id %>">
        Update account information
      </a>
    </p>

    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Go to Inventory Management</a></p>
    <% } %>
  <% } else { %>
    <p>You are not logged in. Please <a href="/account/login">log in</a>.</p>
  <% } %>
</div>
